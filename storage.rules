rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if file is a PDF
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }

    // Helper function to check if file size is reasonable (max 10MB)
    function isReasonableSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Quotation PDFs
    match /quotations/{projectId}/{bomItemId}/{fileName} {
      // Allow authenticated users to upload PDFs for their projects
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isPDF()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Regular documents for BOM items (any file type)
    match /documents/{bomItemId}/{fileName} {
      // Allow authenticated users to upload documents
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Project documents (vendor quotes, POs, customer POs)
    match /projects/{projectId}/documents/{docType}/{fileName} {
      // Allow authenticated users to upload project documents
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Vendor logos
    match /vendor-logos/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Brand logos
    match /brand-logos/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Client logos
    match /client-logos/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Company logos (for PO generation)
    match /company-logos/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Received item photos (proof of delivery)
    match /projects/{projectId}/received-photos/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && request.resource.contentType.matches('image/.*')
                   && isReasonableSize();
      allow delete: if isAuthenticated();
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
